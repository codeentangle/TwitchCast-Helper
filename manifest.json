{
  "manifest_version": 2,
  "name": "TwitchCast Helper",
  "version": "0.1",
  "description": "For everyone that use https://nightdev.com/twitchcast/",
  
  "background": {
    "scripts": ["init.js"],
    "persistent": false
  },
  
  "page_action" :
  {
    "default_icon" : "icon-128.png",
    "default_title" : "TwitchCast Helper"
  },

  "content_scripts": [{
    "matches": ["https://nightdev.com/twitchcast/*"],
    "js": ["setchannel.js"]
  }],
  
  "permissions" : [
    "declarativeContent"
  ],
  "icons" : {
    "128" : "icon-128.png"
  }
}
